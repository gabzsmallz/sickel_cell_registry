<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to Kisumu County Sickle Cell Registry!{% endblock %}</title>
        {% block stylesheets %}
			<link href="{{ asset('css/main.css') }}" rel="stylesheet" />
			<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" />
			
		{% endblock %}
    </head>
    <body>
		{# displaying one flash message #}
		{% for message in app.flashes('notice') %}
			<div class="flash-notice">
				{{ message }}
			</div>
		{% endfor %}
		{# display every flash message #}
		{% for label,messages in app.flashes %}
			{% for message in messages %}
				<div class="flash-{{ label }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
		<div class="header">
		{% block header %}
		{% endblock %}
		</div>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<img src="{{ asset('img/kisumu_logo_sm.png') }}" alt="logo_small" class="rounded img-thumbnail float-left"/>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
			{% block sidemenu %}
				<li class="nav-item active"><a href="{{ path('homepage') }}" class="nav-link" >Home</a>
				<li class="nav-item"><a href="{{ path('patient_index') }}" class="nav-link">Patients</a></li>
				<li class="nav-item"><a href="{{ path('baseline_data_index') }}" class="nav-link">Baseline data</a></li>
				<li class="nav-item"><a href="{{ path('demograhics_index') }}" class="nav-link">Demograhics</a></li>
				<li class="nav-item"><a href="{{ path('interim_history_index') }}" class="nav-link">Interim Histories</a></li>
				<li class="nav-item"><a href="{{ path('health_maintenance_index') }}" class="nav-link">Health maitenance</a></li>
				<li class="nav-item"><a href="{{ path('daily_medications_index') }}" class="nav-link">Daily Medications</a></li>
				<li class="nav-item"><a href="{{ path('sickle_cell_history_index') }}" class="nav-link">Sickle Cell Histories</a></li>
			  <li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="{{ path('report_patient') }}" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				  Reports
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdown">
				  <a class="dropdown-item" href="#">Action</a>
				  <a class="dropdown-item" href="#">Another action</a>
				  <div class="dropdown-divider"></div>
				  <a class="dropdown-item" href="#">Something else here</a>
				</div>
			  </li>
				<!--li><a href="{{ url('homepage') }}">Absolute</a></li-->

			{% endblock %}
				</ul>
			</div>
		</nav>
		<div class="container-fluid">
        {% block body %}{% endblock %}
		</div>
        {% block javascripts %}
			<script src="{{ asset('js/main.js') }}"></script>
			<script src="{{ asset('js/bootstrap.js') }}"></script>
			<script src="{{ asset('js/canvasjs.min.js') }}"></script>
			<script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
		{% endblock %}
    </body>
</html>
